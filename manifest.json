{
  "name": "Window Namer",
  "version": "0.1.0",
  "description": "Show Chrome Windows Names When Switching",
  "permissions": ["windows", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
